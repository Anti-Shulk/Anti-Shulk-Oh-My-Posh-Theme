{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "palettes": {
    "template": "{{.OS}}",
    "list": {
      "fedora": {
        "main": "#51a2da"
      },
      "ubuntu": {
        "main": "#e95420"
      },
      "windows": {
        "main": "#0077c2"
      },
      "arch": {
        "main": "#1793d1"
      }
    }
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "p:main",
          "background": "#fbfbfb",
          "leading_diamond": "\ue0b6",
          "template": "{{.Icon}} "
        },
        
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#ffffff",
          "background": "p:main",
          "template": " {{if .Writable}}{{else}} {{end}}{{ .Path }} ",
          "properties": {
            "folder_icon": "\uf07b",
            "folder_separator_icon": " <#000000>\ue0bd </>",
            "home_icon": "\ueb06",
            "style": "powerlevel"
          },
          "mapped_locations": {
            "/mnt/c/Users/*": "\ueb06",
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#000000",
          "background": "#00C853",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#FFEB3B{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#FFCC80{{ end }}",
            "{{ if gt .Ahead 0 }}#B388FF{{ end }}",
            "{{ if gt .Behind 0 }}#B388FF{{ end }}"
          ],
          "template": "{{.Segments.name}} {{ .HEAD }}{{ if .Staging.Changed }}<#FF6F00> {{ .Staging.String }}</>{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#FFD54F",
          "template": " "
        }
      ],
      "newline": true
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "type": "text",
          "alias": "distrobox",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "#ffffff",
          "background": "#5e4d44",
          "template": "{{if .Env.CONTAINER_ID}}\udb80\udda7 {{.Env.CONTAINER_ID}}{{end}}"
        },
        {
          "type": "root",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "foreground": "#ffffff",
          "background": "#e06c75",
          "template": "\ue799"
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "foreground": "#ffffff",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "background": "p:main",
          "template": "{{ .FormattedMs }}",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ],
  "transient_prompt": {
    "background": "transparent",
    "foreground": "p:main",
    "template": "❯ "
  }
}
